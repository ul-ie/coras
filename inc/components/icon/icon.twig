{#
/**
 * @file
 * Icon component.
 * 
 * @see https://coras.ul.ie/components/icon/#properties for full documentation.
 */
#}

{# Set variable defaults. #}
{% set size = size ?? 'w-5' %}
{% set type = type in ['line', 'social', 'solid', 'twotone'] ? type : 'line' %}

{# Combine the classes. #}
{% set classes %}
  {% if overrides is not empty %}
    {{ overrides }}
  {% else %}
    {{ [fill, size, modifiers]|join(' ') }}
  {% endif %}
{% endset %}

{# Call the icon API function. #}
{{ icon(type, name, {
  id: id,
  classes: classes|trim,
  aria_hidden: aria_hidden ?? false
}) }}
