{#
/**
 * @file
 * Icon component.
 * 
 * @see https://coras.ul.ie/components/icon/#properties for full documentation.
 */
#}

{% set icon_fill = icon_fill is not empty ? icon_fill : '' %}
{% set icon_stroke = icon_stroke is not empty ? icon_stroke : '' %}
{% set icon_name = icon_name is not empty ? icon_name : '' %}
{% set icon_type = icon_type in ['brand', 'duotone', 'regular', 'solid'] ? icon_type : 'solid' %}
{% set icon_size = icon_size is not empty ? icon_size : 'w-4' %}
{% set icon_margin = icon_margin is not empty ? icon_margin: 'mr-3' %}
{% set icon_path %}
  {% include "@icons/" ~ icon_type ~ '/' ~ icon_name ~ '.svg' %}
{% endset %}

{% set icon_classes = [
  icon_fill,
  icon_margin,
  icon_size,
  icon_stroke
]|join(' ') %}

{% if icon_path is not empty %}
  <span class="inline-block {{ icon_classes }}">
    {{ icon_path }}
  </span>
{% else %}
  <small class="text-xs mx-1">Invalid icon</small>
{% endif %}

