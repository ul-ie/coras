{# Set variable defaults. #}
{% set padding = padding ?? 'p-6' %}

{# Define the core component styling. #}
{% set core_classes = 'border border-granite-l3 rounded-md dark:border-granite-d1' %}

{# Combine our classes. #}
{% set classes = [
  core_classes,
  padding,
  modifiers
]|join(' ') %}

{# The component markup. #}
<div class="{{ classes }}">

  {% block html %}{% endblock %}

</div>